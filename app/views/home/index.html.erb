<% content_for(:title, t('home')) %>
<div class = "page-header">
  <h1><%= t :home  %></h1>
</div>
<div class = "row">
  <div class = "span7">
    <div class="thumbnail">
    	<h3><%= t :latest_projects %></h3>
    	<p>
    		<ul>
				<% @projects.each do |project| %>
				  <li>
				    <%= link_to project.title, project_path(project) %>
				  </li>
				  <p>
				    <%= project.description %>
				  </p>
				<% end %>
		    </ul>
    	</p>
    </div>
  </div>
  <div class = "span5">
    <div class = "thumbnail">
      <h3><%= link_to @news.title,@news %></h3>
      <p><%= @news.content[0..150] %></p>
      <%= link_to t('see_more')+'...', @news %>
      </div>
  </div>
</div>